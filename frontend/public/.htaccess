# Set directory index to prefer index.html over index.php
DirectoryIndex index.html index.php

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Route API calls to Laravel backend's index.php
  # This must come BEFORE the SPA routing rule
  RewriteCond %{REQUEST_URI} ^/api/
  # Route to Laravel's index.php (should be symlinked or accessible)
  RewriteRule ^api/(.*)$ /index.php [L,QSA]

  # Don't rewrite storage files (Laravel storage)
  RewriteCond %{REQUEST_URI} ^/storage/
  RewriteRule ^ - [L]

  # Don't rewrite existing files EXCEPT index.php (we want index.html for root)
  # This allows assets, images, etc. to be served directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteCond %{REQUEST_URI} !^/index\.php$
  RewriteRule ^ - [L]

  # Don't rewrite existing directories
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # For root path, explicitly serve index.html (React app)
  RewriteCond %{REQUEST_URI} ^/$
  RewriteRule ^ /index.html [L]

  # Rewrite everything else to index.html for SPA routing
  # This includes /login, /logout, /s/*, and all other frontend routes
  RewriteRule ^ /index.html [L]
</IfModule>
